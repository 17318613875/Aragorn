{
  "compilerOptions": {
    "target": "ES2015",
    "strict": true,
    "module": "CommonJS",
    "noImplicitAny": false,
    "baseUrl": "./",
    "jsx": "react",
    "outDir": "./dist",
    "declaration": true,
    "paths": {
      "@main/*": [
        "packages/aragorn-app-main/src/*"
      ],
      "@renderer/*": [
        "packages/aragorn-app-renderer/src/*"
      ]
    },
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "packages",
    "types"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}